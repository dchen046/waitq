generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id         Int          @id @default(autoincrement())
  email      String       @unique
  password   String
  businesses businesses[]
}

model businesses {
  name    String @id
  address String
  phone   String
  email   String

  user_id      Int            @unique
  user         users          @relation(fields: [user_id], references: [id])
  reservations reservations[]
}

model reservations {
  name  String
  size  String
  time  DateTime
  phone String   @unique
  notes String

  b_name   String
  business businesses @relation(fields: [b_name], references: [name])
}
